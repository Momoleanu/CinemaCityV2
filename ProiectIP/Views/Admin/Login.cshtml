@{
    ViewData["Title"] = "Autentificare Administrator";
}

<div class="container">
    <h1>Autentificare Administrator</h1>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="error-message">@ViewBag.ErrorMessage</div>
    }
    <form id="login-form" action="/admin/login" method="post">
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <div>
            <label for="username">Nume utilizator:</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div>
            <label for="password">Parolă:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <button type="submit">Autentificare</button>
    </form>
    <a class="back-link" href="javascript:history.back()">Înapoi</a>
</div>
